@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/AdminMaster.cshtml";
}
@using itcast.crm16.model;
<div class="content">
    <div class="card-box">
        <!-- Row start -->
         <div class="am-g">
            <div class="am-u-sm-12 am-u-md-6">
                <div class="am-btn-toolbar">
                    <div class="am-btn-group am-btn-group-xs">
                        <button type="button" class="am-btn am-btn-secondary js-modal-open" id="addNews"><span class="am-icon-plus"></span> 发布新闻</button>
                    </div>
                </div>
            </div>

            <div class="am-u-sm-12 am-u-md-3">
                <div class="am-input-group am-input-group-sm">
                    <input type="text" class="am-form-field">
                    <span class="am-input-group-btn">
                        <button class="am-btn am-btn-default" type="button">搜索</button>   
                    </span>
                </div>
            </div>
        </div>
        <!-- Row end -->
        <!-- Row start -->
        <div class="am-g">
            <div class="am-u-sm-12">
                <table class="am-table am-table-striped am-table-hover table-main">
                    <thead>
                        <tr>
                            <th class="table-check"><input type="checkbox"></th>
                            <th class="table-id">序号</th>
                            <th class="table-type">标题</th>
                            <th class="table-author am-hide-sm-only">作者</th>
                            <th class="table-author am-hide-sm-only">创建者</th>
                            <th class="table-date am-hide-sm-only">修改日期</th>
                            <th class="table-type">开启评论</th>
                            <th class="table-set">操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var manageListObj = ViewBag.manageList;
                            if (manageListObj != null)
                            {
                                List<Manage> manageList = manageListObj as List<Manage>;
                                if (manageList != null && manageList.Count > 0)
                                {
                                    foreach (var item in manageList)
                                    {
                                        <tr>
                                            <td><input type="checkbox"></td>
                                            <td>@item.id</td>
                                            <td>@item.Title</td>
                                            <td>@item.Author</td>
                                            <td class="am-hide-sm-only">@item.Creator</td>
                                            <td class="am-hide-sm-only">@(item.CreateTime == null ? DateTime.Now.ToString("yyyy-MM-dd HH:mm") : item.CreateTime.ToString("yyyy-MM-dd HH:mm"))</td>
                                            <td style="color:@(item.Look==0?"green":"red")">@(item.Look == 0 ? "开启" : "关闭")</td>
                                            <td>
                                                <div class="am-btn-toolbar">
                                                    <div class="am-btn-group am-btn-group-xs">
                                                        <button class="am-btn am-btn-default am-btn-xs am-text-secondary" id="btnEdit"><span class="am-icon-pencil-square-o"></span> 编辑</button>
                                                        <button class="am-btn am-btn-default am-btn-xs am-text-danger am-hide-sm-only" onclick="Del(@item.id)"><span class="am-icon-trash-o"></span> 删除</button>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            }


                        }

                    </tbody>
                </table>
                <div class="am-cf">
                    共 15 条记录
                    <div class="am-fr">
                        <ul class="am-pagination">
                            <li class="am-disabled"><a href="#">«</a></li>
                            <li class="am-active"><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">4</a></li>
                            <li><a href="#">5</a></li>
                            <li><a href="#">»</a></li>
                        </ul>
                    </div>
                </div>
                <hr>
                <div class="am-modal am-modal-no-btn" id="doc-modal-1">
                    <div class="am-modal-dialog">
                        <div class="am-modal-hd">
                            发布新闻<!--标题-->
                            <a href="javascript: void(0)" class="am-close am-close-spin" data-am-modal-close>&times;</a>
                        </div>
                        <div class="am-modal-bd">

                            <div class="am-u-md-12">
                                <!--弹窗内容start-->
                                <div class="am-u-md-6">
                                    <form class="am-form am-text-sm">
                                        <div class="am-form-group">
                                            <div class="am-g">
                                                <label class="am-u-md-2 am-md-text-right am-padding-left-0" for="doc-ipt-text-1">标题</label>
                                                <input class="am-u-md-10 form-control" id="doc-ipt-text-1" placeholder="输入标题信息">
                                            </div>
                                        </div>

                                        <div class="am-form-group">
                                            <div class="am-g">
                                                <label class="am-u-md-2 am-md-text-right am-padding-left-0" for="doc-ipt-email-1">作者</label>
                                                <input class="am-u-md-10 form-control" id="doc-ipt-email-1" placeholder="请输入作者">
                                            </div>
                                        </div>

                                        <div class="am-form-group">
                                            <div class="am-g">
                                                <label class="am-u-md-2 am-md-text-right am-padding-left-0" for="doc-ipt-pwd-1">评论开</label>
                                                <input type="checkbox" class="am-u-md-10" id="doc-ipt-pwd-1">
                                            </div>
                                        </div>
                                        <div class="am-form-group">
                                            <div class="am-g">
                                                <label class="am-u-md-2 am-md-text-right am-padding-left-0" for="doc-ta-1">新 闻</label>
                                                <textarea class="am-u-md-10" id="doc-ta-1"></textarea>
                                            </div>
                                        </div>
                                        <div class="am-form-group">
                                            <input type="button" class="am-btn am-btn-default" id="btnSave" value="保存" />&nbsp;<input type="button" class="am-btn am-btn-default" id="btnCancel" value="取消" />
                                        </div>
                                    </form>
                                </div>
                                <!--弹窗内容end-->
                            </div>
                        </div>
                    </div>
                </div>

                <!--弹窗内容end-->
            </div>

        </div>
    </div>
</div>
<script src="~/Areas/admin/Scripts/manage.js"></script>
@section Scripts{
    <script type="text/javascript">
        var editorOption = {
            initialFrameWidth: 600,
            initialFrameHeight: 350
        };
        var editor = new baidu.editor.ui.Editor(editorOption);
        editor.render('doc-ta-1');  //绑定id
    </script>
}@*//要用这个包起来*@